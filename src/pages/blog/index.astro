---
import BaseHead from '../../components/BaseHead.astro';
import Sidebar from '../../components/Sidebar.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={"Blog"} description={SITE_DESCRIPTION} />
	</head>
	<body class="flex w-full flex-col">
    <div class = "grow md:flex h-screen">
      <Sidebar />
      <ul class="w-full md:w-3/4 md:max-w-2xl pl-6 pt-6 pr-6 list-none">
        {
          posts.map((post) => (
            <li>
              <a href={`/blog/${post.id}/`}>
                <div class = "mb-12"> 
                  <h4 class="font-bolder">{post.data.title}</h4>
                  {post.data.heroImage != "" && <img class= "max-w-3/4 max-h-24" src={post.data.heroImage} alt="" />}
                  <p>
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <Footer />
	</body>
</html>
